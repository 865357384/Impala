  <profiles>
    <profile>
      <id>load-testdata</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target>
                    <exec executable="${env.HBASE_HOME}/bin/start-hbase.sh">
                    </exec>
                    <exec executable="${env.HBASE_HOME}/bin/hbase">
		      <arg value="shell"/>
		      <arg value="${project.basedir}/../testdata/bin/create.hbase"/>
                    </exec>
                    <exec executable="${env.HIVE_HOME}/bin/hive">
                      <arg value="-hiveconf"/>
                      <arg value="hive.root.logger=WARN,console"/>
                      <arg value="-v"/>
                      <arg value="-f"/>
                      <arg value="${project.basedir}/../testdata/bin/create.sql"/>
                    </exec>
                    <exec executable="${env.HIVE_HOME}/bin/hive">
                      <arg value="-hiveconf"/>
                      <arg value="hive.root.logger=WARN,console"/>
                      <arg value="-v"/>
                      <arg value="-f"/>
                      <arg value="${project.basedir}/../testdata/bin/load.sql"/>
                    </exec>
                    <exec executable="${env.HBASE_HOME}/bin/hbase">
                      <arg value="shell"/>
                      <arg value="${project.basedir}/../testdata/HBaseAllTypesError/hbasealltypeserror.hbase"/>
                    </exec>
                    <exec executable="${env.HBASE_HOME}/bin/hbase">
                      <arg value="shell"/>
                      <arg value="${project.basedir}/../testdata/HBaseAllTypesErrorNoNulls/hbasealltypeserrornonulls.hbase"/>
                    </exec>
                    <!-- We do not want to stop HBase, 
                         so the tests that need a running HBase can pass.
                         Starting HBase when it is already running
                         will result in a negligible warning.
                    <exec executable="${env.HBASE_HOME}/bin/stop-hbase.sh">
                    </exec>
                    -->
                  </target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

